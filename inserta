<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title> Documento</title>
</head>

<body>
<?php

require("BDconex.php");

$conexion=mysqli_connect($db_host,$db_usuario,$db_contra,$db_nombre);

if (mysqli_connect_errno()){
    echo "Fallo al conectar con la base de datos";
    exit();
}

mysqli_set_charset($conexion, "utf8");

//variables para almacenar los datos de las personas
$nom=$_GET["nome"];
$apel=$_GET["apelidos"];
$nif=$_GET["nif"];
$dom=$_GET["domicilio"];
$ida=$_GET["idade"];

//Registra los valores que introdujimos en las variables, en las BD rexistro de phpmyadmin
$consulta="INSERT INTO rexistro (nome, apelidos, nif, domicilio, idade) VALUES ('$nom', '$apel', '$nif', '$dom', '$ida')";

$resultados=mysqli_query($conexion, $consulta);

//para informar al usuario de si el registro se ha introducido o no:
if ($resultados==false){

    echo "Error en la consulta";

}else{
    echo "Registro guardado<br><br>";
    echo "<table><tr><td>$nom</td></tr>";
    echo "<table><tr><td>$apel</td></tr>";
    echo "<table><tr><td>$nif</td></tr>";
    echo "<table><tr><td>$dom</td></tr>";
    echo "<table><tr><td>$ida</td></tr>";
}

mysqli_close($conexion);

?>
</body>
</html>

